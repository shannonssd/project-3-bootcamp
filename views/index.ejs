<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/login.css">
  <link rel="stylesheet" href="/game.css">
  <link rel="stylesheet" href="/uno-numbers.css">
  <link rel="stylesheet" href="/uno-numbers-small.css">
  <link rel="stylesheet" href="/uno-skip.css">
  <link rel="stylesheet" href="/uno-skip-small.css">
  <link rel="stylesheet" href="/uno-reverse.css">
  <link rel="stylesheet" href="/uno-reverse-small.css">
  <link rel="stylesheet" href="/uno-draw.css">
  <link rel="stylesheet" href="/uno-draw-small.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@700&display=swap" rel="stylesheet">
  <title>OH NO!</title>
</head>
<body>
  <div id="account">
    <div id="login-container">
      <div id="login-container-title">
        <div id="login-title">WELCOME TO </div> 
          <div id="uno-title" class="uno"> OH NO!</div>
      </div>
      
      <div id="third-row-container">
        <div id="login-input-container">
          <div id="username-container">
            <input type="text" id="username" name="username" placeholder="username">
          </div>
          <div id="password-container">
            <input type="password" id="password" name="password" placeholder="password">
          </div>
        </div>
        <div id="button-container">
          <div id="signup-btn-container">
            <button id="signup-btn">Sign Up</button>
          </div>
          <div id="login-btn-container">
            <button id="login-btn" >Login</button>
          </div>
        </div>
      </div>
      <div id="login-container-message">
        <div id="login-message"> </div>
      </div>
    </div>
  </div>
  
  <div id="game">
    <div id="opponent-container-1">
      <div id="opponent-container-card-1">
        
      </div>
      <div class="opponent-container-name1">
        <div class="opponent-name1"> </div>
        <div class="opponent-card-count1"> </div>
      </div>
    </div>
    <div id="container-2-placement">
      <div id="opponent-container-2">
        <div id="opponent-container-card-2">
          
        </div>
        
        <div class="opponent-container-name2">
          <div class="opponent-name2"> </div>
          <div class="opponent-card-count2"> </div>
        </div>
      </div>
    </div>
    
    <div id="opponent-container-3">
      <div id="opponent-container-card-3">
        
      </div>
      <div class="opponent-container-name3">
        <div class="opponent-name3"> </div>
        <div class="opponent-card-count3"> </div>

      </div>
    </div> 

    <div id="discard-container"> </div>

    <div id="user-container">
      <div id="user-board">
        <div id="user-container-message">
          <div id="user-message"> </div>
        </div>
        <div id="user-container-all-cards">

        </div>
        <div id="user-container-btn">
          <div id="play-btn-container">
            <button id="play-button">Play</button>
          </div>
          <div id="skip-btn-container">
            <button id="skip-button" >Skip</button>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="client.js"></script>
</body>
</html>
